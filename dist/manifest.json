{
	"manifest_version": 2,

	"name": "LISHT",
	"description": "This extension helps you save your favorite webpages.",
	"version": "0.7.0.1",

	"browser_action": {
		"default_icon": {
			"19": "icon19.png",
			"38": "icon38.png"
		},
		"default_title": "Open a new tab to view your lisht"
	},

	"content_scripts": [
		{
			"matches": ["http://*/*"],
			"js": ["scripts/scripts.js", "scripts/extension.js"],
			"run_at": "document_start"
		}
	],

	"chrome_url_overrides" : {
		"newtab": "index.html"
	},

	"background": {
		"scripts": ["scripts/extension.js"]
	},

	"web_accessible_resources": [
	    "views/main.html",
	    "scripts/scripts.js",
	    "scripts/extension.js",
	    "styles/main.css"
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"permissions": [
		"<all_urls>",
		"activeTab",
		"tabs",
		"http://*/"
	]
}