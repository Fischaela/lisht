{
	"manifest_version": 2,

	"name": "LISHT",
	"short_name": "Make the most of a new tab",
	"description": "This extension helps you save your favorite webpages.",
	"version": "1.0.0",
	"author": "Michaela Lehr @fischaelameer",

	"icons": {
		"19": "app/Icon-19.png",
		"38": "app/Icon-38.png",
		"48": "app/Icon-48.png",
		"128": "app/Icon-128.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "app/Icon-19.png",
			"38": "app/Icon-38.png"
		},
		"default_title": "Open a new tab to view your lisht"
	},

	"chrome_url_overrides" : {
		"newtab": "app/index.html"
	},

	"background": {
		"scripts": ["app/scripts/extension.js"]
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-RvTQyHleCexMSmrNLTKXypbfgT/zNKxvCKsBqEsEfig'; object-src 'self'",

	"permissions": [
		"<all_urls>",
		"activeTab",
		"tabs",
		"http://*/"
	],

	"web_accessible_resources": [
	    "app/css/main.css",
			"app/scripts/*",
			"node_modules/*"
	]
}
