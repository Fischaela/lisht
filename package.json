{
  "name": "LISHT",
  "version": "2.0.0",
  "scripts": {
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server --open app",
    "build-css": "node-sass --include-path scss app/scss/main.scss app/css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "start": "concurrent \"npm run tsc:w\" \"npm run watch-css\" \"npm run lite\"",
    "build": "concurrent \"npm run tsc\" \"npm run build-css\""
  },
  "license": "ISC",
  "dependencies": {
    "angular2": "2.0.0-beta.0",
    "systemjs": "0.19.6",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.0",
    "zone.js": "0.5.10"
  },
  "devDependencies": {
    "concurrently": "^1.0.0",
    "lite-server": "^1.3.1",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "typescript": "^1.7.3"
  }
}
